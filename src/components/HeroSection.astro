    background-size: 200% auto;
  }
  
  .description-fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }
  
  .buttons-slide-up {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .social-icons-animation {
    opacity: 1;
  }
  
  .social-icons-animation .social-icon {
    opacity: 0;
    transform: scale(0);
    transition: opacity 0.4s ease, transform 0.4s ease, color 0.3s ease;
  }
  
  .profile-image-reveal {
    opacity: 0;
    transform: scale(0.5) rotate(-10deg);
    transition: opacity 1s ease, transform 1s ease, box-shadow 0.3s ease;
  }
  
  /* Animaciones de fondo y elementos decorativos */
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-pulse-slow {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .animate-bounce-slow {
    animation: bounce 3s infinite;
  }
  
  .animate-ping-slow {
    animation: ping 5s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.05);
    }
  }
  
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes ping {
    0% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.3;
    }
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
  }
  
  /* Mejoras en hover */
  .profile-image-reveal:hover {
    box-shadow: 0 0 25px rgba(16, 185, 129, 0.8);
    transform: scale(1.02);
    transition: all 0.3s ease-out;
  }
  
  .social-icon {
    transition: all 0.3s ease;
  }
  
  .gradient-text:hover {
    filter: brightness(1.2);
  }
</style>

<script is:inline>
window.addEventListener('DOMContentLoaded', () => {
  setTimeout(() => {
    // Animate elements with CSS
    document.querySelectorAll('.name-reveal, .gradient-text, .description-fade-in, .buttons-slide-up').forEach((el, index) => {
      setTimeout(() => {
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, 200 * index);
    });
    
    // Social icons animation
    document.querySelectorAll('.social-icon').forEach((icon, index) => {
      setTimeout(() => {
        icon.style.opacity = '1';
        icon.style.transform = 'scale(1)';
      }, 150 * index + 800); // Start after other animations
    });
    
    // Profile image animation
    setTimeout(() => {
      const profileImage = document.querySelector('.profile-image-reveal');
      if (profileImage) {
        profileImage.style.opacity = '1';
        profileImage.style.transform = 'scale(1) rotate(0deg)';
      }
    }, 400);
    
    // Reemplazar completamente el efecto de typing por una solución más robusta
    const typingText = document.querySelector('.typing-effect');
    if (typingText) {
      // Primero borrar cualquier contenido existente
      typingText.textContent = '';
      
      // Definir el texto correcto que queremos mostrar
      const textToType = "¡Hola Mundo! Soy";
      let charIndex = 0;
      
      // Crear una función recursiva para añadir un carácter a la vez
      function typeNextChar() {
        if (charIndex < textToType.length) {
          // Agregar el siguiente caracter
          typingText.textContent = textToType.substring(0, charIndex + 1);
          charIndex++;
          
          // Programar el siguiente caracter
          setTimeout(typeNextChar, 70);
        } else {
          // Animación de parpadeo del cursor cuando se completa
          setInterval(() => {
            typingText.style.borderRightColor = 
              (typingText.style.borderRightColor === 'transparent') 
                ? '#10b981' 
                : 'transparent';
          }, 700);
        }
      }
      
      // Iniciar la animación de escritura
      setTimeout(typeNextChar, 300);
    }
  }, 300);
});
</script>