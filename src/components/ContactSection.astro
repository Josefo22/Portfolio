---
// ContactSection.astro
import { gsap } from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';
import { Icon } from 'astro-icon/components';
---

<div id="contact-component" class="contact-section py-20 w-full block">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Título de sección -->
    <div class="text-center mb-16">
      <h2 data-i18n="contact-title" class="text-4xl font-bold text-gray-800 dark:text-white">
        Contáctame
      </h2>
      <div class="w-24 h-1 bg-emerald-500 mx-auto mt-4"></div>
      <p data-i18n="contact-description" class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        ¿Tienes un proyecto en mente? ¡Hablemos sobre cómo puedo ayudarte a hacerlo realidad!
        Estoy disponible para trabajos freelance, colaboraciones o simplemente para charlar sobre tecnología.
      </p>
    </div>

    <!-- Contenido de contacto -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      <!-- Información de contacto -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-lg">
        <h3 data-i18n="contact-info" class="text-2xl font-semibold text-gray-800 dark:text-white mb-6">
          Información de Contacto
        </h3>
        
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 bg-emerald-100 dark:bg-emerald-900/30 rounded-full p-3">
              <Icon name="mdi:email" class="w-6 h-6 text-emerald-500" />
            </div>
            <div class="ml-4">
              <h4 data-i18n="email-label" class="text-lg font-medium text-gray-800 dark:text-white">
                Email
              </h4>
              <a href="mailto:Josefovelez22@gmail.com" class="text-gray-600 dark:text-gray-300 hover:text-emerald-500 dark:hover:text-emerald-400">
                Josefovelez22@gmail.com
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 bg-emerald-100 dark:bg-emerald-900/30 rounded-full p-3">
              <Icon name="mdi:phone" class="w-6 h-6 text-emerald-500" />
            </div>
            <div class="ml-4">
              <h4 data-i18n="phone" class="text-lg font-medium text-gray-800 dark:text-white">
                Teléfono
              </h4>
              <a href="tel:+57302891396" class="text-gray-600 dark:text-gray-300 hover:text-emerald-500 dark:hover:text-emerald-400">
                +57 302 289 1396
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="flex-shrink-0 bg-emerald-100 dark:bg-emerald-900/30 rounded-full p-3">
              <Icon name="mdi:map-marker" class="w-6 h-6 text-emerald-500" />
            </div>
            <div class="ml-4">
              <h4 data-i18n="location-title" class="text-lg font-medium text-gray-800 dark:text-white">
                Ubicación
              </h4>
              <p class="text-gray-600 dark:text-gray-300">
                Envigado, Colombia<br>
                <span class="text-emerald-500">Disponible para trabajo remoto</span>
              </p>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <h4 data-i18n="follow-me" class="text-lg font-medium text-gray-800 dark:text-white mb-4">
            Sígueme
          </h4>
          <div class="flex space-x-4">
            <a href="#" class="bg-gray-100 dark:bg-gray-700 hover:bg-emerald-100 dark:hover:bg-emerald-900/30 text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 p-3 rounded-full transition-colors duration-300">
              <Icon name="mdi:github" class="w-6 h-6" />
            </a>
            <a href="#" class="bg-gray-100 dark:bg-gray-700 hover:bg-emerald-100 dark:hover:bg-emerald-900/30 text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 p-3 rounded-full transition-colors duration-300">
              <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
            <a href="#" class="bg-gray-100 dark:bg-gray-700 hover:bg-emerald-100 dark:hover:bg-emerald-900/30 text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 p-3 rounded-full transition-colors duration-300">
              <Icon name="mdi:twitter" class="w-6 h-6" />
            </a>
            <a href="#" class="bg-gray-100 dark:bg-gray-700 hover:bg-emerald-100 dark:hover:bg-emerald-900/30 text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 p-3 rounded-full transition-colors duration-300">
              <Icon name="mdi:instagram" class="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
      
      <!-- Formulario de contacto -->
      <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-lg">
        <h3 data-i18n="send-message" class="text-2xl font-semibold text-gray-800 dark:text-white mb-6">
          Envíame un mensaje
        </h3>
        
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="form-name">
              Nombre
            </label>
            <input type="text" id="name" name="name" data-i18n-placeholder="form-name" placeholder="Tu nombre" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 dark:focus:ring-emerald-400 dark:focus:border-emerald-400 text-gray-800 dark:text-white" required />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="form-email">
              Email
            </label>
            <input type="email" id="email" name="email" data-i18n-placeholder="form-email" placeholder="Tu correo electrónico" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 dark:focus:ring-emerald-400 dark:focus:border-emerald-400 text-gray-800 dark:text-white" required />
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="subject">
              Asunto
            </label>
            <input type="text" id="subject" name="subject" placeholder="Asunto del mensaje" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 dark:focus:ring-emerald-400 dark:focus:border-emerald-400 text-gray-800 dark:text-white" required />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" data-i18n="form-message">
              Mensaje
            </label>
            <textarea id="message" name="message" data-i18n-placeholder="form-message" placeholder="Escribe tu mensaje aquí" rows="4" class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 dark:focus:ring-emerald-400 dark:focus:border-emerald-400 text-gray-800 dark:text-white resize-none" required></textarea>
          </div>
          
          <button type="submit" class="w-full px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-medium rounded-lg transition-colors duration-300 flex items-center justify-center">
            <span data-i18n="form-submit">Enviar Mensaje</span>
            <Icon name="mdi:send" class="w-5 h-5 ml-2" />
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-section {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  input, textarea {
    transition: all 0.3s ease;
  }
  
  button[type="submit"] {
    position: relative;
    overflow: hidden;
  }
  
  button[type="submit"]::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    padding-top: 100%;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.15);
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.5s;
  }
  
  button[type="submit"]:hover::after {
    transform: translate(-50%, -50%) scale(1.5);
  }
</style>

<script>
  // Asegurar que el componente de contacto sea visible
  document.addEventListener('DOMContentLoaded', function() {
    const contactComponent = document.getElementById('contact-component');
    if (contactComponent) {
      contactComponent.style.display = 'block';
      contactComponent.style.visibility = 'visible';
      contactComponent.style.opacity = '1';
    }
    
    // Manejar envío de formulario
    const contactForm = document.querySelector('.contact-section form');
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aquí se podría agregar la lógica para enviar el formulario
        // Por ahora solo mostramos un mensaje de éxito
        alert('¡Mensaje enviado correctamente! Te responderé lo antes posible.');
        (contactForm as HTMLFormElement).reset();
      });
    }
  });
</script>

    
