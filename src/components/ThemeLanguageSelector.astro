---
// Selector de tema e idioma simplificado
---

<div class="fixed right-4 top-20 z-40 flex flex-col space-y-2">
  <!-- Tema -->
  <button 
    id="theme-btn"
    class="flex items-center justify-center w-10 h-10 text-gray-500 bg-white dark:bg-gray-800 rounded-full shadow-lg hover:text-emerald-500 dark:hover:text-emerald-400 focus:outline-none transition-colors duration-300"
  >
    <!-- Sol (modo claro) -->
    <svg id="light-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="5"></circle>
      <line x1="12" y1="1" x2="12" y2="3"></line>
      <line x1="12" y1="21" x2="12" y2="23"></line>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
      <line x1="1" y1="12" x2="3" y2="12"></line>
      <line x1="21" y1="12" x2="23" y2="12"></line>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
    
    <!-- Luna (modo oscuro) -->
    <svg id="dark-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
  </button>
  
  <!-- Selector de idioma -->
  <div class="flex flex-col items-center space-y-2">
    <button
      id="spanish-btn" 
      onclick="document.dispatchEvent(new CustomEvent('change-language', {detail: 'es'}))"
      class="flex items-center justify-center w-10 h-10 text-gray-500 bg-white dark:bg-gray-800 rounded-full shadow-lg hover:text-emerald-500 dark:hover:text-emerald-400 focus:outline-none transition-colors duration-300"
    >
      <span class="text-sm font-medium">ES</span>
    </button>
    
    <button
      id="english-btn" 
      onclick="document.dispatchEvent(new CustomEvent('change-language', {detail: 'en'}))"
      class="flex items-center justify-center w-10 h-10 text-gray-500 bg-white dark:bg-gray-800 rounded-full shadow-lg hover:text-emerald-500 dark:hover:text-emerald-400 focus:outline-none transition-colors duration-300"
    >
      <span class="text-sm font-medium">EN</span>
    </button>
  </div>
</div>

<style>
  /* Asegurar que no haya scrollbars adicionales */
  .fixed {
    overflow: visible !important;
  }
</style>

<script is:inline>
  // Inicializar tema al cargar
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle de tema
    const themeBtn = document.getElementById('theme-btn');
    const darkIcon = document.getElementById('dark-icon');
    const lightIcon = document.getElementById('light-icon');
    
    themeBtn.addEventListener('click', function() {
      const isDark = document.documentElement.classList.contains('dark');
      
      if (isDark) {
        document.documentElement.classList.remove('dark');
        darkIcon.classList.remove('hidden');
        lightIcon.classList.add('hidden');
        localStorage.setItem('color-theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        darkIcon.classList.add('hidden');
        lightIcon.classList.remove('hidden');
        localStorage.setItem('color-theme', 'dark');
      }
    });
  });
  
  // Manejar evento de cambio de idioma
  document.addEventListener('change-language', function(e) {
    const lang = e.detail;
    console.log('Evento change-language recibido:', lang);
    
    // Llamar a la función global si existe
    if (typeof window.changeLanguage === 'function') {
      window.changeLanguage(lang);
    } else {
      console.error('La función changeLanguage no está disponible');
    }
  });
</script> 